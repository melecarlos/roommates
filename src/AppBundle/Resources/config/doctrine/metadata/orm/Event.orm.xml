<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Event" table="event">
    <indexes>
      <index name="fk_event_header1_idx" columns="header"/>
      <index name="fk_event_package1_idx" columns="package"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="subject" type="string" column="subject" length="100" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="text" column="description" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="startDate" type="datetime" column="start_date" nullable="false"/>
    <field name="endDate" type="datetime" column="end_date" nullable="false"/>
    <field name="bgColor" type="string" column="bg_color" length="7" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="frColor" type="string" column="fr_color" length="7" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="status" type="string" column="status" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="numPersons" type="integer" column="num_persons" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="price" type="float" column="price" precision="10" scale="0" nullable="true"/>
    <field name="createdDate" type="datetime" column="created_date" nullable="true"/>
    <field name="updatedDate" type="datetime" column="updated_date" nullable="true"/>
    <many-to-one field="package" target-entity="Package" fetch="LAZY">
      <join-columns>
        <join-column name="package" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="header" target-entity="Header" fetch="LAZY">
      <join-columns>
        <join-column name="header" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
