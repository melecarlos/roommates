<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Payment" table="payment">
    <indexes>
      <index name="fk_payment_event1_idx" columns="event"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="description" type="text" column="description" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="pay" type="float" column="pay" precision="10" scale="0" nullable="false"/>
    <field name="createdDate" type="datetime" column="created_date" nullable="true"/>
    <many-to-one field="event" target-entity="Event" fetch="LAZY">
      <join-columns>
        <join-column name="event" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
